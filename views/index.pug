extends layout

block content
  include partials/navbar.pug

  if all_products.length 
    div.products-container
      each product in all_products 
        div.product-card
          img(src=product.image)
          a(href=product.url) #{product.title} 
          p $ #{product.price}
          button.blue-btn Add to Cart  
  else
    p #[strong Products not found ]